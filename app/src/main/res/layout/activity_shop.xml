            android:text="选择时间"
            android:gravity="center"
            android:background="@android:color/holo_blue_dark"
            android:textSize="35dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="630dp" />


</LinearLayout>